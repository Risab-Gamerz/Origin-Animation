{
  "format_version": "1.10.0",
  "minecraft:client_entity": {
    "description": {
      "identifier": "minecraft:pig",
      "min_engine_version": "1.8.0",
      "materials": { "default": "pig" },
      "textures": {
        "default": "textures/entity/pig/pig",
        "saddled": "textures/entity/pig/pig_saddle"
      },
      "geometry": {
        "default": "geometry.pigg"
      },
      "animations": {
        "setup": "animation.pig.setup", 
        "idle": "animation.pigg.idle", 
        "nose": "animation.pigg.sniff",
        "walk": "animation.pigg.setup",
        "left": "animation.pigg.left",
        "mid": "animation.pigg.mid",
        "right": "animation.pigg.right",
        "walk2": "animation.pigg.walk",
        "run": "animation.pigg.run",
        "look_at_target": "animation.common.look_at_target",
        "general": "controller.animation.pigg.general",
        "look": "controller.animation.pigg.look",
        "baby_transform": "animation.pig.baby_transform"
      },
      "scripts": {
        "animate": [
          "setup",
          "general",
          "look",
          { "walk": "query.modified_move_speed" },
          { "nose": "query.is_alive" },
          "look_at_target",
          { "baby_transform": "query.is_baby" }
        ]
      },
      "render_controllers": [ "controller.render.pig" ],
      "spawn_egg": {
        "texture": "spawn_egg",
        "texture_index": 2
      }
    }
  }
}
