{
	"format_version" : "1.10.0",
	"animation_controllers" : {	
                "controller.animation.pigg.general" : {
			"initial_state" : "default",
			"states" : {
				"default" : {
					"animations" : [ "idle" ],
					"transitions": [
						{
							"walking": "query.ground_speed > 0.2 && query.ground_speed < 3.0"
						},
                                                {
							"running": "query.ground_speed > 3.5"
						}
					],
					"blend_transition": 0.3,
					"blend_via_shortest_path": true
				},
                                "running" : {
					"animations" : [ "run" ],
					"transitions": [
						{
							"default": "query.ground_speed < 0.2"
						},
                                                {
							"walking": "query.ground_speed > 0.2 && query.ground_speed < 3.0"
						}
					],
					"blend_transition": 0.3,
					"blend_via_shortest_path": true
				},
				"walking" : {
					"animations" : [ "walk2" ],
					"transitions": [
						{
							"default": "query.ground_speed < 0.2"
						},
                                                {
							"running": "query.ground_speed > 3.5"
						}
					],
					"blend_transition": 0.3,
					"blend_via_shortest_path": true
				}
			}
		},
                "controller.animation.pigg.look" : {
			"initial_state" : "default",
			"states" : {
				"righting" : {
					"animations" : [ "left" ],
					"transitions": [
						{
							"lefting": "query.target_y_rotation > 15.0"
						},
                                                {
							"middle": "query.target_y_rotation < 10.0 && query.target_y_rotation > -10.0"
						}
					],
					"blend_transition": 0.3,
					"blend_via_shortest_path": true
				},
                                "lefting" : {
					"animations" : [ "right" ],
					"transitions": [
						{
							"righting": "query.target_y_rotation < -15.0"
						},
                                                {
							"middle": "query.target_y_rotation < 10.0 && query.target_y_rotation > -10.0"
						}
					],
					"blend_transition": 0.3,
					"blend_via_shortest_path": true
				},
				"middle" : {
					"animations" : [ "mid" ],
					"transitions": [
						{
							"righting": "query.target_y_rotation < -15.0"
						},
                                                {
							"lefting": "query.target_y_rotation > 15.0"
						}
					],
					"blend_transition": 0.3,
					"blend_via_shortest_path": true
				}
			}
		}
	}
}
